@{
  Layout = "_Layout";
}

@model Treat.Models.Flavor

@using (Html.BeginForm())
{
  <div class="card">
    <div class="card-header">
      <h5 class="card-title">Add A Food To @Html.DisplayFor(f => f.Name)</h5>
    </div>
    <div class="card-body form-group">
      @Html.HiddenFor(f => f.FlavorId)
      @Html.HiddenFor(f => f.Name)
      @Html.Label("Select Food")
      @Html.DropDownList("FoodId", (SelectList)ViewBag.FoodId, "", new {@class="form-control", @required=true})
    </div>
    <div class="card-footer row">
      <div class="btn-group">
        <input type="submit" value="Add Food" class="btn btn-info" />
        @Html.ActionLink("Cancel", "Details", "Flavors", new { id = Model.FlavorId }, new { @class="btn btn-warning"})
      </div>
    </div>
  </div>
}