@{
  Layout = "_Layout";
}

@model Treat.Models.Food

<div class="card">
  <div class="card-header">
    <h5 class="card-title">@Model.Name</h5>
  </div>
  <div class="card-body">
    @if(Model.Flavors.Count == 0)
    {
      <p><i>No flavors added for this food</i></p>
    }
    else
    {
      <h6>Flavors For This Food:</h6>
      <ul>
        @foreach(var join in Model.Flavors)
        {
          <li>@Html.ActionLink($"{join.Flavor.Name}", "Details", "Flavors", new { id = join.Flavor.FlavorId }, new {@class="card-link"})</li>
        }
      </ul>
    }
  </div>
  <div class="card-footer">
    @Html.ActionLink("Edit", "Edit", "Foods", new { id = Model.FoodId }, new { @class="btn btn-info"})
    @using (Html.BeginForm("Delete", "Foods", FormMethod.Post))
    {
      <input type="submit" value="Delete" class="btn btn-alert" />
    }
  </div>
</div>