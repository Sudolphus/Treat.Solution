@model Treat.ViewModels.RegisterViewModel

<h2>Register a New Account</h2>
@using (Html.BeginForm("Register", "Account", FormMethod.Post))
{
  <div class="card">
    <div class="card-header">
      <h5 class="card-title">Register An Account</h5>
    </div>
    <div class="card-body">
      <div class="form-group">
        @Html.LabelFor(m => m.UserName)
        @Html.TextBoxFor(m => m.UserName, new {@class="form-control", @required=true})
        @Html.ValidationMessageFor(m => m.UserName, null, new {@class="text-danger"})
        @Html.LabelFor(m => m.Password)
        @Html.PasswordFor(m => m.Password, new {@class="form-control", @required=true})
        @Html.ValidationMessageFor(m => m.Password, null, new {@class="text-danger"})
        @Html.LabelFor(m => m.ConfirmPassword)
        @Html.PasswordFor(m => m.ConfirmPassword, new {@class="form-control", @required=true})
        @Html.ValidationMessageFor(m => m.ConfirmPassword, null, new {@class="text-danger"})
      </div>
    </div>
    <div class="card-footer">
      <input type="submit" value="Register New User" class="btn btn-primary" />
    </div>
  </div>
}

